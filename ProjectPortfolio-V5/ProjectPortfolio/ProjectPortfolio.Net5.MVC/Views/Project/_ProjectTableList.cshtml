@model IEnumerable<ProjectPortfolio.Domain.Model.Business.ProjectListItem>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@foreach (var project in Model)
{
    <tr>
        <td>@project.Title</td>
        <td>@project.Created</td>
        <td>@project.Featured</td>
        <td>
            <a asp-action="Details" asp-route-projectId="@project.Id">View</a>
        </td>
    </tr>
}
@if (!Model.Any())
{
    <tr>
        <td class="text-center" colspan="4">No Projects to display</td>
    </tr>
}